 import { useCallback, ClipboardEventHandler } from 'react';
 import { getDataTransferFiles } from '../utils/dom';
 
+// Check if running in Tauri - check for window.__TAURI__ or __TAURI_INTERNALS__
+const isTauri = (): boolean => {
+  return typeof window !== 'undefined' && 
+    ('__TAURI__' in window || '__TAURI_INTERNALS__' in window);
+};
+
+// Get clipboard image from Tauri backend
+const getTauriClipboardImage = async (): Promise<File | null> => {
+  if (!isTauri()) {
+    console.log('[Clipboard] Not in Tauri environment');
+    return null;
+  }
+  
+  try {
+    console.log('[Clipboard] Attempting to get image from Tauri...');
+    const { invoke } = await import('@tauri-apps/api/core');
+    console.log('[Clipboard] Got invoke function, calling get_clipboard_image...');
+    const result = await invoke<{ data: string; mime_type: string } | null>('get_clipboard_image');
+    console.log('[Clipboard] Result:', result ? `Got ${result.mime_type}` : 'No image');
+    
+    if (result && result.data) {
+      // Convert base64 to File
+      const byteString = atob(result.data);
+      const ab = new ArrayBuffer(byteString.length);
+      const ia = new Uint8Array(ab);
+      for (let i = 0; i < byteString.length; i++) {
+        ia[i] = byteString.charCodeAt(i);
+      }
+      const ext = result.mime_type.split('/')[1] || 'png';
+      const blob = new Blob([ab], { type: result.mime_type });
+      console.log('[Clipboard] Created file from clipboard image');
+      return new File([blob], `clipboard-image.${ext}`, { type: result.mime_type });
+    }
+  } catch (e) {
+    console.error('[Clipboard] Failed to get clipboard image from Tauri:', e);
+  }
+  return null;
+};
+
 export const useFilePasteHandler = (onPaste: (file: File[]) => void): ClipboardEventHandler =>
   useCallback(
     (evt) => {
+      // First try standard clipboard API
       const files = getDataTransferFiles(evt.clipboardData);
-      if (files) onPaste(files);
+      if (files && files.length > 0) {
+        console.log('[Clipboard] Got files from standard API:', files.length);
+        onPaste(files);
+        return;
+      }
+      
+      console.log('[Clipboard] No files from standard API, trying Tauri...');
+      // If no files from standard API and we're in Tauri, try native clipboard
+      getTauriClipboardImage().then((tauriImage) => {
+        if (tauriImage) {
+          console.log('[Clipboard] Got image from Tauri, passing to handler');
+          onPaste([tauriImage]);
+        } else {
+          console.log('[Clipboard] No image from Tauri either');
+        }
+      });
     },
     [onPaste]
   );
